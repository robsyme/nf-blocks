/*
 * Example Nextflow configuration for nf-blocks plugin
 */

// Enable the plugin
plugins {
    id 'nf-blocks@0.1.0'
}

profiles {
    local {
        // Example: Local-only configuration for testing
        outputDir = 'blocks+file:///tmp/nf-blocks'

        blocks {
            enabled = true
            storage.uri = 'blocks+file:///tmp/nf-blocks'
            refs.uri = 'refs+file:///tmp/nf-blocks'
        }
    }
}
